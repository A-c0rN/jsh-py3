#!/usr/bin/env python3

import jsh-py3


def test_command(*args, **kwargs):
    print(args)
    print(kwargs)


def ping(*args, **kwargs):
    print('Ping!')
    print(args)
    print(kwargs)


layout = {
    'help': {
        '?': 'Show help',
        None: jsh-py3.show_commands,
    },
    'quit': {
        '?': 'Quit',
        None: jsh-py3.exit,
    },
    'test': {
        '?': 'Test something',
        str: {
            '?': ('thing', 'Must be an integer'),
            None: test_command,
            '_validate': jsh-py3.validate_int,
            '_kwarg': True,
            str: {
                '?': ('thing', 'Must be in (0..200)'),
                None: test_command,
                '_validate': jsh-py3.validate_range(0, 200),
                'bob': {
                    '?': 'Bob',
                    None: test_command,
                    str: {
                        '?': ('yet', 'Must be one of a, b or c'),
                        '_validate': jsh-py3.validate_in(['a', 'b', 'c']),
                        None: test_command,
                        '_kwarg': 'bobby',
                    },
                },
            },
        },
    },
    'ping': {
        '?': 'Ping a destination',
        str: {
            '?': ('host', 'Host to ping'),
            None: ping,
            '_kwarg': 'host',
        },
        'size': {
            '?': 'Size of request packets',
            str: {
                '?': 'size',
                '_kwarg': 'size',
                '_option': True,
            },
        },
        'ttl': {
            '?': 'IP time-to-live value',
            str: {
                '?': 'ttl',
                '_kwarg': True,
                '_option': True,
            },
        },
    },
}

jsh-py3.run(layout)
